# User-defined paths

# PATH="$PATH:~/micromamba/"

# export PATH=/usr/local/cuda/bin${PATH:+:${PATH}}



path_list=(
"$HOME/bin"
"$HOME/.local/bin"
"/usr/local/cuda/bin"
# jetbrains
"$HOME/.local/share/JetBrains/Toolbox/scripts"
"$HOME/mambaforge/bin"
#brew
)

# brew in linux
if [ -d "/home/linuxbrew/.linuxbrew/bin" ]; then
   eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
   path_list+="$(brew --prefix coreutils)/libexec/gnubin"
fi
#  brew in macos
if [ -d "/opt/homebrew/bin" ]; then
    eval "$(/opt/homebrew/bin/brew shellenv)"
fi

for path_v in "${path_list[@]}"; do
    if [ -d "$path_v" ]; then
        PATH="$path_v:$PATH"
    fi
done

cpp_path_list=(
"$HOME/mambaforge/include"
)
for path_v in "${cpp_path_list}"; do
    if [ -d "$path_v" ]; then
        CPLUS_INCLUDE_PATH=${CPLUS_INCLUDE_PATH:+$CPLUS_INCLUDE_PATH:}"$path_v"
    fi
done

